{
  "compilerOptions": {
    "allowJs": false,
    "target": "es6",
    "outDir": "dist/types",
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    "baseUrl": "src/",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noLib": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "lib": ["es6", "es7", "es2017", "dom"],
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["./node_modules", "./example-app", "./dist"]
}
