{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2016",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "src/",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
